{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "experimentalDecorators": true,
    "baseUrl": "./",
    "paths": {
      "@sunbird/core": [
        "app/modules/core"
      ],
      "@sunbird/shared": [
        "app/modules/shared"
      ],
      "@sunbird/dashboard": [
        "app/modules/dashboard"
      ],
      "@sunbird/resource": [
        "app/modules/resource"
      ],
      "@sunbird/learn": [
        "app/modules/learn"
      ],
      "@sunbird/public": [
        "app/modules/public"
      ],
      "@sunbird/profile": [
        "app/plugins/profile"
      ],
      "@sunbird/search": [
        "app/modules/search"
      ],
      "@sunbird/telemetry": [
        "app/modules/telemetry"
      ],
      "@sunbird/shared-feature": [
        "app/modules/shared-feature"
      ],
      "@sunbird/environment": [
        "environments/environment"
      ],
      "moment": [
        "../node_modules/moment/min/moment.min.js"
      ],
      "@sunbird/player-helper": [
        "app/modules/player-helper"
      ],
      "@sunbird/offline" : [
        "app/modules/offline"
      ],
      "@sunbird/user-profile": [
        "app/modules/user-profile"
      ],
      "@sunbird/content-consumption": [
        "app/modules/content-consumption"
      ],
      "@sunbird/content-search": [
        "app/modules/content-search"
      ]
    },
    "module": "es2015",
    "types": []
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts",
    "**/*.spec.data.ts"
  ]
}